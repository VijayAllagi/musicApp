{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "rootDir": "./src",
    "noImplicitAny": true,
    "lib": ["dom", "dom.iterable", "es6"],
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "baseUrl": "src",
    "paths": {
      "~/images/*": ["./src/images/*"],
      "~/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "typeRoots": [
    "node_modules/@types"
  ]
}